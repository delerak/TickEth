
<div class="row">
{{#each data}}
<div class="col-sm-3">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">{{this.name}}</h5>
      <p class="card-text">{{this.address}}</p>
{{query}}
      {{#if query.id}}
        <a href="/validateUsers?id={{this._id}}" class="btn disabled btn-primary">Validate</a>
      {{else}}
        <a href="/validateUsers?id={{this._id}}" class="btn btn-primary">Validate</a>
      {{/if}}

    </div>
  </div>
</div>
{{/each}}
</div>
